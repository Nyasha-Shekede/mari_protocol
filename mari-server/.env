# Physics Validation Tolerances
LOCATION_TOLERANCE=100
TIME_TOLERANCE=300000

# Sentinel Integration
SENTINEL_URL=http://localhost:3002
SENTINEL_AUTH_TOKEN=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_RANDOM_KEY

# RabbitMQ (for Sentinel training event publishing)
RABBITMQ_URL=amqp://localhost:5672