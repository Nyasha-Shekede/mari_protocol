# Mari Server Production Configuration
PORT=3000
DATABASE_URL=mongodb://localhost:27017/mari-core
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_RANDOM_KEY
JWT_EXPIRY=24h
BCRYPT_ROUNDS=12

# SMS Configuration (Twilio)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_FROM_NUMBER=YOUR_TWILIO_PHONE_NUMBER
TWILIO_MESSAGING_SERVICE_SID=
