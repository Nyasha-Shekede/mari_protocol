REDIS_URL=redis://redis:6379
RABBITMQ_URL=amqp://rabbitmq:5672
PORT=3002

#Crypto adapter RPCs and price hints
# Use service-friendly endpoints; HTTP for Ethereum to avoid WS issues if no WS key is set.
BITCOIN_MEMPOOL_API=https://blockstream.info/api
ETHEREUM_RPC_URL=https://eth.llamarpc.com
ETHEREUM_POLL_INTERVAL=15000
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_POLL_INTERVAL=20000
BTC_USD_PRICE=30000
ETH_USD_PRICE=2000
SOL_USD_PRICE=100

#Threat intel APIs
CERTIK_API_URL=https://www.certik.com/api/v1
# Leave keys empty to disable; or set ENABLE_* flags below
CERTIK_API_KEY=
CHAINALYSIS_API_KEY=

# Optional feature flags
# Disable noisy external sources by default; set to true when keys are configured
ENABLE_CERTIK=false
ENABLE_CHAINALYSIS=false

# DEV ONLY: bypass corporate TLS interception (do NOT enable in production)
NODE_TLS_REJECT_UNAUTHORIZED=0
